<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
android:background="@color/light_grey">
    <TextView android:layout_width="match_parent" android:layout_height="18dp"
              android:background="@color/black"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"


        >
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#e3e4e6"
        android:layout_margin="10dp"
        android:padding="5dp">


        <ImageView android:layout_width="20dp" android:layout_height="20dp"
        android:background="@drawable/navigationbar_search"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:hint="搜索"/>
        </LinearLayout>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/dark_grey"/>


    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/dark_grey"/>

    <ListView android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/leftmain_listview"/>

</LinearLayout>