<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="80dip" >

    <ImageView
            android:id="@+id/givefragment_listview_img"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:src="@drawable/ic_launcher" />

    <TextView
            android:id="@+id/givefragment_listview_info"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/givefragment_listview_img"
            android:text=""
            android:textColor=""
            android:textSize="12sp" />

    <TextView
            android:id="@+id/givefragment_listview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/givefragment_listview_info"
            android:layout_toRightOf="@id/givefragment_listview_img"
            android:maxLines="3"
            android:text=""
            android:textColor="#99000000"
            android:textSize="12sp" />



</RelativeLayout>