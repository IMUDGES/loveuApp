<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="90dp"
                  android:paddingTop="20dp"
    android:orientation="horizontal"
    >
        <View android:layout_width="0dp" android:layout_height="70dp"
              android:layout_weight="1"/>
        <ImageView android:layout_width="0dp" android:layout_height="70dp"
        android:layout_weight="2"
        android:background="@drawable/food"/>
        <View android:layout_width="0dp" android:layout_height="70dp"
              android:layout_weight="1"/>
        <ImageView android:layout_width="0dp" android:layout_height="70dp"
                   android:layout_weight="2"
        android:background="@drawable/help"/>
        <View android:layout_width="0dp" android:layout_height="70dp"
              android:layout_weight="1"/>
        <ImageView android:layout_width="0dp" android:layout_height="70dp"
                   android:layout_weight="2"
        android:background="@drawable/jwxt"/>
        <View android:layout_width="0dp" android:layout_height="70dp"
              android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="90dp"
                  android:paddingTop="20dp"
                  android:paddingBottom="20dp"
                  android:orientation="horizontal"
    >
        <View android:layout_width="0dp" android:layout_height="70dp"
              android:layout_weight="1"/>
        <ImageView android:layout_width="0dp" android:layout_height="70dp"
                   android:layout_weight="2"
                   android:background="@drawable/pai"/>
        <View android:layout_width="0dp" android:layout_height="70dp"
              android:layout_weight="1"/>
        <ImageView android:layout_width="0dp" android:layout_height="70dp"
                   android:layout_weight="2"
                   android:background="@drawable/run"/>
        <View android:layout_width="0dp" android:layout_height="70dp"
              android:layout_weight="1"/>
        <ImageView android:layout_width="0dp" android:layout_height="70dp"
                   android:layout_weight="2"
                   android:background="@drawable/send"/>
        <View android:layout_width="0dp" android:layout_height="70dp"
              android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>