<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:padding="15dp"
                  android:background="#ffffff"
                  android:layout_height="match_parent">

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content">
            <ImageView android:layout_width="50dp"
                       android:id="@+id/run_item_image"
                       android:src="@drawable/ic_launcher"
                       android:layout_height="50dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="admin"
                      android:textSize="20dp"
                      android:layout_toEndOf="@+id/run_item_image"
                      android:layout_height="30dp"
                      android:id="@+id/run_item_username"/>
            <Button android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="关注"
                    android:id="@+id/run_item_addfriend"
                    android:background="#000fff"
                    android:layout_alignParentRight="true"
            />
        </RelativeLayout>
        <TextView android:layout_width="match_parent"
                  android:background="#000000"
                  android:layout_height="1px"/>

        <TextView android:layout_width="match_parent"
                  android:id="@+id/run_item_infor"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="match_parent"
                  android:background="#000000"
                  android:layout_height="1px"/>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="20dp">
            <TextView android:layout_width="wrap_content"
                      android:text="Time"
                      android:gravity="center"
                      android:layout_height="match_parent"/>
            <ImageView android:layout_width="wrap_content"
                       android:src="@drawable/ic_launcher"
                       android:layout_height="match_parent"/>
            <TextView android:layout_width="wrap_content"
                      android:id="@+id/run_item_time"
                      android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="20dp">
            <TextView android:layout_width="wrap_content"
                      android:text="Area"
                      android:gravity="center"
                      android:layout_height="match_parent"/>
            <ImageView android:layout_width="wrap_content"
                       android:src="@drawable/ic_launcher"
                       android:layout_height="match_parent"/>
            <TextView android:layout_width="wrap_content"
                      android:id="@+id/run_item_area"
                      android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>